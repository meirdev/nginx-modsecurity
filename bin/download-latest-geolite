#!/usr/bin/env bash

set -euo pipefail

GEOLITE_BASE_URL="https://github.com/P3TERX/GeoLite.mmdb/raw/download"

GEOLITE_DIR="/etc/geolite"

GEOLITE_FILES=("GeoLite2-City.mmdb" "GeoLite2-Country.mmdb" "GeoLite2-ASN.mmdb")

mkdir -p $GEOLITE_DIR

for file in "${GEOLITE_FILES[@]}"; do
    curl -L -o $GEOLITE_DIR/$file $GEOLITE_BASE_URL/$file
done
